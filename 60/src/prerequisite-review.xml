    <exercise>
        <title>Multiplying integers and decimals</title>
        <webwork>
            <setup>
                <pg-code>
                    Context()->flags->set(tolType=>absolute,tolerance=>0.00001);
                    $a=Real(503*16);
                    $b=Real(5.6*0.13);
                </pg-code>
            </setup>
            <statement>
                <p><ol label="a">
                    <li>
                        <p><m>503(16)=</m><var name="$a" width="10" /></p>
                    </li>
                    <li>
                        <p><m>(5.6)(0.13)=</m><var name="$b" width="10" /></p>
                    </li>
                </ol></p>
            </statement>
        </webwork>
    </exercise>
    <exercise>
